<extra>
    <ROOT>
        <TCEforms>
            <sheetTitle>Options</sheetTitle>
        </TCEforms>
        <type>array</type>
        <el>
            <settings.col-number>
                <TCEforms>
                    <label>Items pro Reihe</label>
                    <config>
                        <type>select</type>
                        <renderType>selectSingle</renderType>
                        <default>1</default>
                        <items type="array">
                            <numIndex index="0" type="array">
                                <numIndex index="0">3 Cards</numIndex>
                                <numIndex index="1">3</numIndex>
                            </numIndex>
                            <numIndex index="1" type="array">
                                <numIndex index="0">2 Cards</numIndex>
                                <numIndex index="1">2</numIndex>
                            </numIndex>
                            <numIndex index="2" type="array">
                                <numIndex index="0">1 Card</numIndex>
                                <numIndex index="1">1</numIndex>
                            </numIndex>
                            <numIndex index="3" type="array">
                                <numIndex index="0">4 Cards</numIndex>
                                <numIndex index="1">4</numIndex>
                            </numIndex>
                        </items>
                    </config>
                </TCEforms>
            </settings.col-number>
            <settings.text-bg>
                <TCEforms>
                    <label>Text-Background</label>
                    <config>
                        <type>check</type>
                        <default>0</default>
                    </config>
                </TCEforms>
            </settings.text-bg>
            <settings.slider>
                <TCEforms>
                    <label>Slider</label>
                    <config>
                        <type>check</type>
                        <default>0</default>
                    </config>
                </TCEforms>
            </settings.slider>
            <settings.hideCategory>
                <TCEforms>
                    <label>Kategorie ausblenden</label>
                    <config>
                        <type>check</type>
                        <default>0</default>
                    </config>
                </TCEforms>
            </settings.hideCategory>
            <settings.hideDate>
                <TCEforms>
                    <label>Datum ausblenden</label>
                    <config>
                        <type>check</type>
                        <default>0</default>
                    </config>
                </TCEforms>
            </settings.hideDate>
            <settings.hideTeaser>
                <TCEforms>
                    <label>Teaser ausblenden</label>
                    <config>
                        <type>check</type>
                        <default>0</default>
                    </config>
                </TCEforms>
            </settings.hideTeaser>
        </el>
    </ROOT>
</extra>
